  <body>
  <div class="container">
    <h2>Bordered Table</h2>
    <p>The .table-bordered class adds borders to a table:</p>            
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        {{if(data.length)}}{ 
          for(var i = 0;i < data.length;i++) { %>
        <tr>
          <td><%=(i+1)%></td>
          <td><%=data[i].field1%></td>
          <td><%=data[i].field2%></td>
          <td><%=data[i].field3%></td>
        </tr>
        <% }
        }else{ %>
        <tr>
          <td colspan="3">No user</td>
        </tr>
      <% } {{/if}}
      </tbody>
    </table>
  </div>

  </body>