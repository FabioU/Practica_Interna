<!-- Create teams-->
<div id="create_team" class="container-fluid">
  <h1>Equipos</h1>
   <div class="form-group row">
  <div class="col-xs-2">
    <label for="name">Nombre</label>
    <input class="form-control" id="nombre_t" type="text" placeholder="Ingrese el nombre del equipo">
  </div>
  <div class="col-xs-2">
    <label for="disc">Disciplina</label>
    <input class="form-control" id="disc" type="text" placeholder="Ingrese la disciplina">
  </div>
  </div>
  <div class="form-group row">
  <div class="col-xs-2">
    <label for="number_p">Cantidad</label>
    <input class="form-control" id="number_p" type="text" placeholder="Ingrese la cantidad de jugadores">
  </div>
  <div class="col-xs-2">
    <label for="color">Color</label>
    <input class="form-control" id="color" type="text" placeholder="Ingrese el color de uniforme del equipo">
  </div>
  </div>
 </p>
   <button type="button" id="insert_team" class="btn btn-default" onclick="insertar()">Insertar</button>
